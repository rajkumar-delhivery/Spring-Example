<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
    <context:component-scan base-package="SpringBeanLifeCycle"/>
    <bean id="book" class="SpringBeanLifeCycle.LIfeCycleOrder.Book" init-method="myPostConstruct"
          destroy-method="myPreDestroy">
        <property name="bookName" value="Mahabharat"/>
    </bean>
    <bean class="SpringBeanLifeCycle.LIfeCycleOrder.MyBeanPostProcessor"/>
</beans>